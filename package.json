{
  "name": "bitcore-node",
  "description": "A blockchain indexing node with extended capabilities using bitcore",
  "engines": {
    "node": ">=8.0.0"
  },
  "version": "8.0.1",
  "author": "Justin Langston <nitsujlangston@gmail.com>",
  "contributors": [
    "Justin Langston <nitsujlangston@gmail.com>",
    "Micah Riggan <micahriggan@gmail.com>"
  ],
  "main": "build/server.js",
  "bin": "bin/start",
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "start": "npm run tsc && node build/server.js",
    "debug": "npm run tsc && node --inspect build/server.js --DEBUG true",
    "tsc": "./node_modules/.bin/tsc",
    "test": "mocha ./test/unit"
  },
  "keywords": [
    "bitcore-node",
    "typescript",
    "bitcoin",
    "bitcoin-cash",
    "ethereum",
    "node"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/mongodb": "^3.0.18",
    "@types/mongoose": "^5.0.11",
    "@types/node": "^10.0.3",
    "@types/request": "^2.47.0",
    "@types/winston": "^2.3.9",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^5.0.5",
    "sinon": "^4.4.8",
    "supertest": "^3.0.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "JSONStream": "~1.3.1",
    "async": "^2.5.0",
    "bitcore-lib": "^8.0.0",
    "bitcore-lib-cash": "^8.0.0",
    "bitcore-p2p": "^8.0.0",
    "bitcore-p2p-cash": "^8.0.0",
    "body-parser": "~1.17.2",
    "express": "~4.15.3",
    "mkdirp": "^0.5.1",
    "mongoose": "^5.0.11",
    "progress": "^2.0.0",
    "request": "^2.81.0",
    "secp256k1": "^3.5.0",
    "snappy": "^6.0.1",
    "underscore": "^1.8.3",
    "winston": "^2.3.9"
  }
}
